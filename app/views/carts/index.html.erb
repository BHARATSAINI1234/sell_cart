<h1>Listing carts</h1>

<table>
  <tr>
  </tr>

  <% @carts.each do |cart| %>
    <tr>
      <td><%= button_to 'Show', cart %></td>
      <td><%= button_to 'Edit', edit_cart_path(cart) %></td>
      <td><%= button_to 'Destroy', cart, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</table>

<br />

