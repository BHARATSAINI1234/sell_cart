<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if logged_in? %>
      <%= link_to "SHOPCART APP", products_path, id: "logo" %>
    <% else %>
      <%= link_to "SHOPCART APP", root_path, id: "logo" %>
    <% end %>
    
    <nav>
      <ul class="nav navbar-nav navbar-right">
        
        <% if logged_in? %>

          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              Account <b class="caret"></b>
            </a>

            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li class="divider"></li>           
              <li><%= link_to "User", products_path(:user_id => current_user.id) %></li>
              <li class="divider"></li>  
              <li>
                <%= link_to "Log out", logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
            <li><%= link_to "Products", products_path %></li>
            <li> <%= link_to 'New Product', new_product_path %></li>
          </li>
        <% else %>
         
        <% end %>
      </ul>
    </nav>
  </div>
</header>